section "memcpy", rom0
MemCpy:: ; hl - src, de - dest, bc - length
	; adjust for decloop
	dec bc
	inc b
	inc c
.loop ; copy a byte
	ld a, [hl+]
	ld [de], a
	inc de
	; decrement length
	dec c
	jr nz, .loop
	dec b
	jr nz, .loop
	ret

section "shortcpy", rom0
ShortCpy:: ; hl - src, de - dest, b - length
.loop ; copy a byte
	ld a, [hl+]
	ld [de], a
	inc de
	; decrement length
	dec b
	jr nz, .loop
	ret

section "memset", rom0
MemSet:: ; a - data, hl - dest, bc - length, clobbers e
	; adjust bc
	dec bc
	inc b
	inc c
.loop ; set a byte
	ld [hl+], a
	; decrement length
	dec c
	jr nz, .loop
	dec b
	jr nz, .loop
	ret

