section "joy", rom0 ; wow this is such a mess
Joy:: ; reads joypad, b - no. of joypads (if more than 1), clobbers (b)c, hl, de
	ld hl, hPad1
	ld c, low(rP1)
.loop
	ld e, [hl] ; preserve for later
	ldh a, [c] ; get Dpad
	ld d, a
	ld a, P1F_GET_BTN
	ldh [c], a ; select buttons
	ld a, $0f
	and d
	swap a ; dpad goes in left nibble
	ld d, a
	ldh a, [c] ; get buttons
	and a, $0f
	or a, d ; merge states
	cpl ; invert
	ld [hl+], a ; buttons held
	xor a, e
	ld [hl+], a ; buttons changed
	and e
	ld [hl+], a ; buttons newly pressed
	ld a, P1F_GET_DPAD
	ldh [c], a ; select Dpad
	if PLAYERS > 1
		dec b
		jr nz, .loop
	endc
	ret

section "joypads", hram
for V, 1, PLAYERS+1
	hPad{x:V}:: ds 1
	.diff:: ds 1
	.press:: ds 1
endr

