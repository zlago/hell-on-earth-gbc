section "palcpy", rom0
PalCpy:: ; hl - src, a - F_AUTOINC | dest, c - rOCPS/rBCPS, b - length
	; set addr
	ldh [c], a
	inc c
.loop ; copy a byte
	ld a, [hl+]
	ldh [c], a ; pal
	; dec length
